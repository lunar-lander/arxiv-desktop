{
  "name": "arxiv-desktop",
  "version": "1.0.0",
  "description": "Desktop app for arXiv and bioRxiv paper management",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:react": "BROWSER=none react-scripts start",
    "dev:electron": "NODE_ENV=development electron .",
    "build": "react-scripts build",
    "build:electron": "npm run build && electron-builder",
    "test": "react-scripts test",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder -mwl",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,json}\" \"electron/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,json}\" \"electron/**/*.js\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" \"electron/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" \"electron/**/*.{js,ts}\" --fix",
    "prepare": "husky"
  },
  "author": "Claude",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.8.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.14.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "lucide-react": "^0.454.0",
    "mathjax": "^3.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-pdf": "^9.1.1",
    "react-scripts": "5.0.1",
    "remark-gfm": "^4.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{css,json}": [
      "prettier --write"
    ],
    "electron/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.claude.arxiv-desktop",
    "productName": "ArXiv Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.png",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Education",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}

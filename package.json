{
  "name": "arxiv-desktop",
  "version": "1.0.0",
  "description": "Desktop app for arXiv and bioRxiv paper management",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:react": "BROWSER=none react-scripts start",
    "dev:electron": "NODE_ENV=development electron .",
    "build": "react-scripts build",
    "build:electron": "npm run build && electron-builder",
    "test": "react-scripts test",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder -mwl",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,json}\" \"electron/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,json}\" \"electron/**/*.js\"",
    "lint": "eslint \"src/**/*.{js,jsx}\" \"electron/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx}\" \"electron/**/*.js\" --fix",
    "prepare": "husky"
  },
  "author": "Claude",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lucide-react": "^0.294.0",
    "mathjax": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-pdf": "^7.5.0",
    "react-scripts": "5.0.1",
    "remark-gfm": "^4.0.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{css,json}": [
      "prettier --write"
    ],
    "electron/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.claude.arxiv-desktop",
    "productName": "ArXiv Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
